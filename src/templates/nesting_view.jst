window.Backbone ||= {}
window.Backbone.Views ||= {}

class Backbone.Views.<%= _(name).classify() %>View extends Backbone.Diorama.NestingView
  template: Handlebars.templates['<%= _(name).underscored() %>.hbs']

  initialize: (options) ->
    @render()

  render: =>
    @closeSubViews()
    @$el.html(@template(thisView: @))
    @renderSubViews()

    return @

  onClose: ->
    @closeSubViews()
