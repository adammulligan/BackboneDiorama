window.Backbone ||= {}
window.Backbone.Views ||= {}

class Backbone.Views.<%= controllerName %><%= stateName %>View extends Backbone.View
  template: JST['<%= controllerName.toLowerCase() %>/<%= stateName.toLowerCase() %>']

  initialize: (options) ->
    @render()

  render: =>
    @$el.html(@template())

  onClose: ->
